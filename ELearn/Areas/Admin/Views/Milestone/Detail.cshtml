@model MilestoneDetailVM
@{
    ViewData["Title"] = "Detail";
}

<style>
    .detail-view {
        display: flex;
        align-items: center;
    }

    .image {
        width: 400px;
        margin-right: 20px;
    }

    .info {
        flex-grow: 1;
    }

        .info h2 {
            font-size: 24px;
            font-weight: bold;
        }

        .info p {
            font-size: 16px;
            margin-bottom: 10px;
        }

</style>
<div class="detail-view">
    <div class="info">
        <h2>@Model.Title</h2>
        <p>Count: @Model.Count</p>
        <p>@Model.Date</p>
        <a asp-controller="Milestone" asp-action="Index" class="btn btn-danger">Back</a>
    </div>

</div>



